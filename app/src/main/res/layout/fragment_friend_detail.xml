<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/friend_detail_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop">
        </ImageView>

        <TextView
            android:id="@+id/friend_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/timesnewroman"
            android:text="Fullname">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/timesnewroman"
            android:layout_marginTop="8dp">
        </TextView>

        <TextView
            android:id="@+id/friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:fontFamily="@font/timesnewroman"
            android:layout_marginTop="8dp">
        </TextView>

        <TextView
            android:id="@+id/friend_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/timesnewroman"
            android:layout_marginTop="8dp">
        </TextView>

        <TextView
            android:id="@+id/friend_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:fontFamily="@font/timesnewroman"
            android:layout_marginTop="8dp">
        </TextView>
        <TextView
            android:id="@+id/friend_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask for Playturns: 5"
            android:fontFamily="@font/timesnewroman"
            android:layout_marginTop="8dp">
        </TextView>

        <Button
            android:id="@+id/btn_give_away_voucher"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/timesnewroman"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="Give Away Voucher">
        </Button>
        <Button
            android:id="@+id/btn_give_away_playturn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/timesnewroman"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="Give Away Playturn">
        </Button>

    </LinearLayout>
</FrameLayout>
